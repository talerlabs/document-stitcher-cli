  "scripts": {
    "start": "bun run src/index.ts",
    "prepare": "husky install",
    "package:win": "bun build --compile --outfile bin/document-stitcher.exe src/index.ts",
    "package:mac": "bun build --compile --outfile bin/document-stitcher src/index.ts",
